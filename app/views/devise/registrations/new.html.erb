<div class="first-form-card form-card mdl-shadow--4dp">
  <div class="form-login">
    <h2 class="form-title">Welcome to<br>the News Club</h2>
    <br>
    <br>
    <h3 class="form-subtitle" style="font-family: 'Helvetica">We'd like to get to<br>know you better</h3>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs first-form">
      <div class="mdl-textfield mdl-js-textfield">
        <%= f.input_field :first_name, class: "mdl-textfield__input" %>
        <label class="mdl-textfield__label" for="sample1">First name...</label>
      </div>

      <div class="mdl-textfield mdl-js-textfield">
        <%= f.input_field :last_name, class: "mdl-textfield__input" %>
        <label class="mdl-textfield__label" for="sample1">Last Name...</label>
      </div>

      <div class="mdl-textfield mdl-js-textfield">
        <%= f.email_field :email,
        required: true,
        autofocus: true,
        input_html: { autocomplete: "email" }, class: "mdl-textfield__input"%>
        <label class="mdl-textfield__label" for="sample1">Email...</label>
      </div>

      <div class="mdl-textfield mdl-js-textfield">
        <%= f.password_field :password,
        required: true,
        input_html: { autocomplete: "new-password" }, class: "mdl-textfield__input"%>
        <label class="mdl-textfield__label" for="sample1">Password...</label>
      </div>

      <div class="space-me">
        <%= f.button :submit, "Sign up", class: "mdl-button mdl-js-button mdl-button--raised mdl-button--colored btn-color btn-color-2"  %>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>


<style type="text/css">
  .mdl-button{
    margin-right: 17px;
  }
</style>



