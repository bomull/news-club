
<div class="form-card mdl-shadow--4dp">
  <div class="form-login">
    <h2>Log in</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">

      <div class="mdl-textfield mdl-js-textfield">
        <%= f.email_field :email,
        required: true,
        autofocus: true,
        input_html: { autocomplete: "email" }, class: "mdl-textfield__input"%>
        <label class="mdl-textfield__label" for="sample1">Email...</label>
      </div>

      <div class="mdl-textfield mdl-js-textfield">
        <%= f.password_field :password,
        required: true,
        input_html: { autocomplete: "new-password" }, class: "mdl-textfield__input"%>
        <label class="mdl-textfield__label" for="sample1">Password...</label>
      </div>

      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      <div class="space-me">
        <%= f.button :submit, "Log in", class: "mdl-button mdl-js-button mdl-button--raised mdl-button--colored btn-color" %>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>


<style type="text/css">
  .mdl-button{
    margin-right: 17px;
    margin-bottom: 17px;
  }
</style>


