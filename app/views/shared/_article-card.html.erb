
<% addr = URI.parse(a["url"]).host %>


<!-- <div class="mdl-cell mdl-cell--4-col"> -->
<div class="container mdl-cell mdl-cell--4-col mdl-shadow--4dp" style="background: url(<%= a["image"] %>) center / cover">

  <% if current_user.readings.find_by(article_id: a.id) %>
    <i class="material-icons" style="position: absolute; bottom: 10px; left: 10px; z-index: 10;">check_circle</i>
  <% end %>

  <div class="mask-block"></div>
  <div class="upper">
    <h4><%= a["date"].strftime('%A, %b %d %Y') %></h4>
    <h3><%= a["title"].split('|')[0] %></h3>
  </div>

  <div class="bottom">
    <%= image_tag("http://logo.clearbit.com/#{addr}", class: "avatar-small") %>

    <div style="display: flex; flex-direction: column;">
      <h5><%= a["source"] %></h5>
    </div>
  </div>

   <!-- <div class="overlay" style="background-color: <%= ['rgba(0,174,239)', 'rgba(255,242,0)'].sample %>"> -->
      <!-- <p><%= a["content"].split(' [')[0] %></p> -->
   <!-- </div> -->
      <div class="overlay">
        <div class="text-container">
          <p><%= a["content"].split(' [')[0] %></p>
        </div>
      </div>
</div>
