<div class="demo-card-wide mdl-card mdl-shadow--2dp">
  <div class="mdl-card__title" style="background: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= article.image %>) center / cover">
    <h2 class="mdl-card__title-text"><%= article.title %></h2>
  </div>

  <div class="mdl-card__supporting-text">
    <%= article.description %>
  </div>
  <div class="mdl-card__actions mdl-card--border">
    <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect mdl mdl-color-text--red-300">
      <%= article.source %>
    </a>
  </div>
  <div class="mdl-card__menu">
    <% if current_user.readings.find_by(article_id: article.id) %>
      <button class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect">
        <i class="material-icons">check_circle</i>
      </button>
    <% end %>
    <button class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect">
      <i class="material-icons">share</i>
    </button>
  </div>
</div>



