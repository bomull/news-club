
<style type="text/css">

  .head-section {
    position: relative;
    height: 150px;
  }
  .heading  {
    position: absolute;
    left: 21%;
    top: 11%;
    font-family: Merriweather;
    font-weight: bold !important;
    font-size: 50px;
}
  .subheading {
    position: absolute;
    left: 28%;
    top: 41%;
    margin-right: auto;
    width: 50%;
    padding: 10px;
    font-family: Roboto;
    font-weight: lighter;
    font-size: 25px;
    color: #333333;
    line-height: 32px;
 }

.pop_up {
    position: fixed;
    /*background-color: green;*/
    display: flex;
    justify-content: center;
    z-index: 40;
    width: 100%;
    font-size: 33px;
    height: 70px;
    bottom: 0;
    pointer-events: none;
}


h1 {
    font-size: 15px;
}

.pop_uph1{
  transform: translateY(70px);
  width:20vw;
  height: 70px;
  background-color: #77ab59;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20px;
  border-radius: 5px;
  opacity: 0;
  transition:all ease 0.5s;
  color: white;
}
.popupshow{
  opacity: 1;
  transform: translateY(0px);
}

h1 {
    font-size: 15px;
}
</style>

<div class="head-section">
  <h3 class="heading">Choose your favorite publications </h3>
  <h4 class="subheading">We'll give you recomendations for selected sources</h4>
</div>
<div class="mdl-tabs mdl-js-tabs mdl-js-ripple-effect">
    <div class="mdl-tabs__tab-bar">
        <a href="#publications-panel" class="mdl-tabs__tab is-active">NEWSPAPERS</a>
        <a href="#magazines-panel" class="mdl-tabs__tab">MAGAZINES</a>
        <a href="#online-panel" class="mdl-tabs__tab">ONLINE PUBLICATIONS</a>
        <a href="#authors-panel" class="mdl-tabs__tab">AUTHORS</a>
        <a href="#themes-panel" class="mdl-tabs__tab">THEMES</a>
    </div>
    <div class="mdl-tabs__panel is-active" id="publications-panel">
        <%= form_tag(preference_path(current_user), method: :patch) do %>
        <h3>Newspapers</h3>
        <div class="mdl-grid">
            <% [ "australian-financial-review", "daily-mail", "financial-times", "independent", "mirror", "the-globe-and-mail",
              "the-hindu", "the-irish-times", "the-jerusalem-post", "the-new-york-times", "the-telegraph",
              "the-times-of-india", "usa-today", "the-wall-street-journal", "the-washington-post", "the-washington-times",].each do |source|%>
            <%= render 'shared/publication-card', source: source %>
            <% end %>
        </div>
        <div class="preference_circle">
            <%= submit_tag "Save\npreferences", class: "cta-preferences" %>
            <% end -%>
        </div>
    </div>
    <div class="mdl-tabs__panel" id="magazines-panel">
        <%= form_tag(preference_path(current_user), method: :patch) do %>
        <h3>Magazines</h3>
        <div class="mdl-grid">
            <% ["business-insider", "business-insider-uk", "entertainment-weekly", "financial-post", "fortune", "national-geographic", "national-review", "the-huffington-post",
                "new-scientist", "newsweek", "new-york-magazine", "politico", "the-economist", "the-hill", "time", "vice-news",
                "wired"].each do |source|%>
            <%= render 'shared/publication-card', source: source %>
            <% end %>
        </div>
        <div>
            <%= submit_tag "SAVE\nPREFERENCES", class: "cta-preferences" %>
            <% end -%>
        </div>
    </div>
    <div class="mdl-tabs__panel" id="online-panel">
        <%= form_tag(preference_path(current_user), method: :patch) do %>
        <h3>Magazines</h3>
        <div class="mdl-grid">
            <% ["abc-news","abc-news-au","al-jazeera-english","ars-technica","associated-press","axios",
                "bleacher-report","bloomberg","buzzfeed","cnbc","cnn","crypto-coins-news","engadget","espn",
                "espn-cric-info","football-italia","four-four-two","ign","mashable","medical-news-today",
                "msnbc","nbc-news","news24","news-com-au","next-big-future","nfl-news","nhl-news","polygon",
                "recode","reuters","rte","techcrunch","techradar","the-next-web","the-sport-bible",
                "the-verge"].each do |source|%>
            <%= render 'shared/publication-card', source: source %>
            <% end %>
        </div>
        <div>
            <%= submit_tag "SAVE PREFERENCES", class: "cta-preferences" %>

            <% end -%>
        </div>
    </div>
    <div class="mdl-tabs__panel" id="authors-panel">
        <div class="mdl-grid">
            ["Arwa Mahdawi","Jonathan Watts","Jessica Schladebeck","Elle Hunt","Mattha Busby","Carol Anderson","Damian Carrington","Katharine Murphy","Ayman Odeh","Oliver Milman","Katharine Murphy","Oliver Milman","Camille Stein","Niv Elis","Lynn Saxberg","Corey Atad","Chuck Rosenberg","Vlada Gelman","Joe Hojnacki","Drew Magary","Natalie Theodosi","Steve O'Hear","Connie Loizos","Kenneth Chang","Severin Carrell","Julia Alexander","Kate Clark","Sarah Perez","Lucas Matney","Devin Coldewey","Shane Goldmacher","Mike Ives","Muktita Suhartono","Kyle Orland","Jonathan Shieber","Damian Carrington","Gaby Hinsliff","Daniel Bortz","David Brooks","Roger Cohen","Connie Loizos","Erez Manela","Romain Dillet","Nathan Mattise"]
        </div>
    </div>
    <div class="mdl-tabs__panel" id="themes-panel">
        <div class="mdl-grid">
            themes
        </div>
    </div>
</div>
<div class='pop_up'><div class='pop_uph1' ><div>Saved!</div></div></div>
<script type="text/javascript">
const pop_up = document.querySelector(".pop_uph1")
document.querySelector(".cta-preferences").addEventListener("click", (event) => {
  pop_up.classList.add("popupshow")
});
</script>
